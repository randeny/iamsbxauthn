<?xml version="1.0" encoding="utf-8" ?>
<TrustFrameworkPolicy 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
  xmlns="http://schemas.microsoft.com/online/cpim/schemas/2013/06" 
  PolicySchemaVersion="0.3.0.0" 
  TenantId="{{TENANT_ID}}" 
  PolicyId="B2C_1A_TrustFrameworkExtensions_{{RELEASE_ID}}" 
  PublicPolicyUri="http://{{TENANT_ID}}/B2C_1A_TrustFrameworkExtensions_{{RELEASE_ID}}">
  
  <BasePolicy>
    <TenantId>{{TENANT_ID}}</TenantId>
    <PolicyId>B2C_1A_TrustFrameworkBase_{{RELEASE_ID}}</PolicyId>
  </BasePolicy>
  <BuildingBlocks>

  </BuildingBlocks>

  <ClaimsProviders>


    <ClaimsProvider>
      <DisplayName>Local Account SignIn</DisplayName>
      <TechnicalProfiles>
         <TechnicalProfile Id="login-NonInteractive">
          <Metadata>
            <Item Key="client_id">{{PIEF_APP_ID}}</Item>
            <Item Key="IdTokenAudience">{{IEF_APP_ID}}</Item>
          </Metadata>
          <InputClaims>
            <InputClaim ClaimTypeReferenceId="client_id" DefaultValue="{{PIEF_APP_ID}}" />
            <InputClaim ClaimTypeReferenceId="resource_id" PartnerClaimType="resource" DefaultValue="{{IEF_APP_ID}}" />
          </InputClaims>
        </TechnicalProfile>
      </TechnicalProfiles>
    </ClaimsProvider>

  </ClaimsProviders>

    <!--UserJourneys>
	
	</UserJourneys-->

</TrustFrameworkPolicy>
